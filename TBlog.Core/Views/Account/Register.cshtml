@model RegisterViewModel

@{
    ViewBag.Title = "Registration";
}

<h3>@ViewBag.Title</h3>

<form asp-controller="Account" asp-action="Register" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group text-muted">
        <small>
            <label asp-for="Email"></label>
        </small>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group text-muted">
        <small>
            <label asp-for="FirstName"></label>
        </small>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group text-muted">
        <small>
            <label asp-for="LastName"></label>
        </small>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group text-muted">
        <small>
            <label asp-for="Password"></label>
        </small>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group text-muted">
        <small>
            <label asp-for="ConfirmPassword"></label>
        </small>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group text-muted pt-3">
        <button type="submit" class="btn btn-primary btn-lg btn-block">REGISTER</button>
    </div>
    <!-- ADD 3RD PARTY INTEGRATION
    <hr data-content="OR" class="my-3 hr-text letter-spacing-2">
    <button class="btn btn-outline-primary btn-block mb-3">
        <i class="fa fa-facebook">  </i>
        Connect with Facebook
    </button>
    <button class="btn btn-outline-secondary btn-block mb-3">
        <i class="fa fa-google">  </i>
        Connect with Google
    </button>
    -->
    <hr class="my-4">
    <p class="text-center">
        <small class="text-muted text-center">
            By signing up you agree to the t-blog
            <a asp-controller="Shared" asp-action="TermsAndConditions"> Terms and Conditions </a>
            and
            <a asp-controller="Shared" asp-action="Privacy"> Privacy Policy</a>
        </small>
    </p>
</form>
