@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h3>@ViewData["Title"]</h3>

<partial name="_StatusMessage" />

<!--<form asp-controller="Account" asp-action="Login" method="post">  THIS BREAKS THE RETURNURL OPTION-->
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group text-muted">
        <small>
            <label asp-for="Email"></label>
        </small>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group text-muted">
        <div class="row">
            <div class="col">
                <small>
                    <label asp-for="Password"></label>
                </small>
            </div>
            <div class="col-auto">
                <a asp-controller="Account" asp-action="ForgotPassword" class="form-text small" tabIndex="-1">Forgot your password?</a>
            </div>
        </div>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group text-muted">
        <div class="custom-control custom-checkbox">
            <input asp-for="RememberMe" class="custom-control-input" />
            <label asp-for="RememberMe" class="custom-control-label">
                <small>@Html.DisplayNameFor(m => m.RememberMe)</small>
            </label>
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg btn-block">SIGN IN</button>
    </div>

    <hr data-content="OR" class="my-3 hr-text letter-spacing-2">

    <a class="btn btn-outline-secondary btn-lg btn-block" asp-controller="Account" asp-action="Register">Register</a>

