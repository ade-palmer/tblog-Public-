@model UsersViewModel

@{
    bool confirmed = Model.EmailConfirmed;
}

<div class="modal-header">
    <h4 class="modal-title">Confirm Deletion</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <label asp-for="@Model.FirstName" class="col-3 offset-1 font-weight-bold"></label>:
        <div class="col-6">@Model.FirstName</div>
    </div>
    <div class="row">
        <label asp-for="@Model.LastName" class="col-3 offset-1 font-weight-bold"></label>:
        <div class="col-6">@Model.LastName</div>
    </div>
    <div class="row">
        <label asp-for="@Model.Email" class="col-3 offset-1 font-weight-bold"></label>:
        <div class="col-6">@Model.Email</div>
    </div>
    <div class="row">
        <label asp-for="@Model.EmailConfirmed" class="col-3 offset-1 font-weight-bold"></label>:
        <div class="col-6">@(confirmed ? "Yes" : "No")</div>
    </div>
    <p class="text-center">This will delete all associated posts and comments.</p>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
    <form asp-controller="Admin" asp-action="DeleteUser" asp-route-Id="@Model.UserId" method="post">
        <button type="submit" value="Delete" class="btn btn-danger">Delete</button>
    </form>
</div>